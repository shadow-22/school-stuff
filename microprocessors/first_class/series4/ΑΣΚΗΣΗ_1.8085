ORG 0809H       ;ои пяогцоулемес хесеис вягсилопоиоутаи циа апохгйеусг дедолемым.
IN 10H          ;апемеяцопоигсг пяостасиас лмглгс.

LXI H,0803H     ;/ 0803-0806H: та 4 ьгжиа тгс охомгс поу дем вягсилопоиоумтаи.
MVI M,10H
INX H
MVI M,10H
INX H
MVI M,10H
INX H 
MVI M,10H       ;/
INX H
MVI M,00H       ; 0807H: сглаиа диайопгс

MVI A,0DH ; / ENERGOPOIHSH DIAKOPHS RST6.5
SIM
EI        ;/



START:
MVI A,FFH       ;/ сбгсило LED.
STA 3000H       ;/
LXI H,0807H
MOV A,M
CPI 01H         ;екецвос сглаиас диайопгс. ам еимаи 1 евеи сулбеи диайопг.
JZ READY
MVI A,01H       ;/
CPI 00H         ;/йамомийг кеитоуяциа: йатастасг амаломгс
JNZ START       ;/

READY:          ;тлгла енупгяетгсгс диайопгс. 

MVI A,00H
STA 3000H       ;амалла LED.
LXI H,0807H
MVI M,00H       ;лгдемислос сглаиас диайопгс.
LXI H,0800H
MVI M,FFH       ;лгдемислос летягтг деутеяокептым.
      
LOOP1:
LXI H,0807H     ;/екецвос циа емеяцопоигсг диайопгс. ам емеяцопоигхгйе диайопг 
MOV A,M         ;/се ауто то сглеио циметаи амамеысг тоу вяомоу.
CPI 01H         ;/
JZ READY
LXI H,0800H     ;/аунгсг летягтг деутеяокептым йата 1.
INR M           ;/
MOV A,M
CPI 3CH         ;/ам о летятгтгс жтасеи сто 60, епестяеже стгм йамомийг 
JZ START        ;/кеитоуяциа тоу пяоцяаллатос.

MVI B,00H
CONVERTER:
INR B
SUI 0AH
JM OK
JMP CONVERTER
OK:
DCR B
ADI 0AH
LXI H,0801H
MOV M,A
INX H
MOV M,B
LXI D,0801H
CALL DCD        ;/елжамисг дедолемым стгм охомг.
CALL STDM       ;/
LXI B,03E8H
CALL DELB       ;вяомойахустеягсг емос деутеяокептоу.
JMP LOOP1

INTR_ROUTINE:   ;яоутима енупгяетгсгс диайопгс.
PUSH PSW
LXI H,0807H
MVI M,01H       ;хесг сглаиас диайопгс.
POP PSW
EI
RET


END


